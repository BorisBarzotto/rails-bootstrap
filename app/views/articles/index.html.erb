<h1 class='text-center mt-4 text-white'>Showing Articles Index</h1>

<div class="container">
  <% @articles.each do |article| %>
    <div class="row justify-content-md-center ">
      <div class="col-6 mt-4 shadow mb-5 px-0 bg-body rounded">
        <div class="card text-center">
          <div class="card-header fst-italic">
              By Boris Pulido
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= link_to article.title, article_path(article), class:"text-success" %></h5>
              <p class="card-text"><%= article.description %></p>
              <div class="container">
                <%= link_to 'View', article_path(article.id),class:"btn btn-outline-success", method: :get %>
                <%= link_to 'Edit', edit_article_path(article.id),class:"btn btn-outline-info", method: :get %>
                <%= link_to 'Delete', article_path(article.id),class:"btn btn-outline-danger", form: { data: { turbo_confirm: 'Are you sure?' }}, method: :delete %>
              </div>
            </div>
            <div class="card-footer text-muted">
              <small>Created <%= time_ago_in_words(article.created_at) %> ago, edited <%= time_ago_in_words(article.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

